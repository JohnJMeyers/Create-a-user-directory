<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User Profile</title>
    <link rel="stylesheet" href="styles.css">
  </head>
  </head>
  <body>

    <main class='user-main'>
      {{#users}}
        <section class='avatar-box'>
          <img class='avatar-round' src="{{avatar}}" alt="">
          <h5 class='education'><strong>Education</strong></h5>
          <h5 class='skills'><strong>Skills</strong></h5>
        </section>
        <section class='info-box'>
          <div class="info-text">
            <h1 class='info-name'>{{name}}</h1>
            <p class='info-address1'>{{#address.city}} {{address.city}}, {{/address.city}} {{address.country}} {{^address.city}}{{/address.city}} | {{#job}} {{job}}, {{/job}} {{company}} {{^job}}<span style='color: red;'>Available for hire</span>{{/job}}</p>
            <p class='info-address2'>{{email}} | {{phone}}</p>
          </div>
          <div class="info-education">
            <p class='university'>{{#university}} {{university}} {{/university}} {{^university}}{{/university}}</p>
            {{#skills}}
              <p id='skill'>{{.}}</p>
            {{/skills}}
          </div>
        </section>
      {{/users}}
    </main>

  </body>
</html>
