<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Users</title>
    <link rel="stylesheet" href="styles.css">
  </head>
  <body>
    <section class='main'>

        {{#users}}

          <a class="anchor" href="{{id}}">
            <div class="user-block">
              <img class='avatar' src='{{avatar}}'></img>
              <p class='userName'>{{username}}</p>
              <p class='job'>{{#job}}{{job}},{{/job}} {{company}}</p>
              <p class='forHire'>{{^job}}Available for hire{{/job}}</p>
            </div>
          </a>
          
        {{/users}}

    </section>
  </body>
</html>
